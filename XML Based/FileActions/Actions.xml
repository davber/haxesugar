<?xml version="1.0"?>
<action-recipes>
	<action id="com.davber.FileActions.haxe.hxml" category="actions.file.haxe">
	
		<class>haxeHxmlCompile</class>
		<title>Build HXML</title>
		<when-disabled>hide</when-disabled>
		<setup>
			<compile-using>haxe</compile-using>
			<compiler-location>/usr/bin/haxe</compiler-location>
			<extensions>
				<array>
					<string>hxml</string>
				</array>
			</extensions>
		</setup>
	</action>
</action-recipes>
